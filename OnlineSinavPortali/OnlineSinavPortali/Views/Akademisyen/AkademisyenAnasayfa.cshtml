            <div><br /></div><div><br /></div>
            <div><br /></div><div><br /></div>
         

            <div class="col-md-12">

                <div class="col-md-4">
                    @Html.ActionLink("KATEGORİ EKLE", "KategoriEkle", "Akademisyen", null, new { @class = "btn btn-primary" })<br /><br />
