
@{
    ViewBag.Title = "AkademisyenAnasayfa";
}

<style>
    a{
        font-size: 40px;
    }
</style>


<script>
    $(function () {

        $("#ktgIslem").hide();
        $("#snvIslem").hide();

        $("#ktg").click(function () {
            $("#ktgIslem").toggle();
            $("#snvIslem").hide();
        });

        $("#snv").click(function () {
            $("#snvIslem").toggle();
            $("#ktgIslem").hide();
        });

    });
</script>


